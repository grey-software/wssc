      "env": [
        "PORT",
        "DB_URL",
        "JWT_KEY "
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
