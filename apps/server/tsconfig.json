
{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "typeRoots": [
      "@types", // custom merged types must be first in a list
      "./node_modules/@types"
    ]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}



